public class thisTeleOpClass extends LinearOpMode {

//vars
private Servo servoConveyor;
private DcMotor motorFiring;
private bool boolFiring = false;

//Main
@Override
public void runOpMode() {
  //hardwareMap.get(s)
  servoConveyor = hardwareMap.get(Servo.class, "servoConveyor");
  motorFiring = hardwareMap.get(DcMotor.class, "motorFiring");
  
  //Telemetry Status
  telemetry.addData("Status","Initialized");
  telemetry.update;
  waitForStart();
  //On Start area
  
  
  //while running area (update void)
  while(opModeIsActive()){
    telemetry.addData("Status","Running");
    telemetry.update;
    
    //Firing, press to start spin, press again to stop.
    if(gamepad1.x && !boolFiring) {
      motorFiring.setPower(1.0?); //Whatever power we want it to be set at to fire.
      boolFiring = true;
    }
    else if(gamepad1.x && boolFiring){
      motorFiring.setPower(0.0?); //I don't know if it's a double or not
      boolFiring = false;
    }
  }
}
